<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_P"
    tools:context=".play_onlinge.score_fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/image_player1"
        app:layout_constraintStart_toEndOf="@id/previous_message1"
        android:layout_marginBottom="@dimen/dimens_18px"

        >

        <TextView
            android:id="@+id/txt_msg1"
            style="@style/scrollbar_shape_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_message1"

            android:gravity="start|center_vertical"


            android:maxWidth="@dimen/dimens_550px"
            android:maxHeight="@dimen/dimens_220px"
            android:paddingStart="@dimen/dimens_55px"
            android:paddingEnd="@dimen/dimens_55px"
            android:paddingTop="@dimen/dimens_32px"
            android:paddingBottom="@dimen/dimens_32px"

            android:scrollbars="vertical"

            android:textColor="@color/color_text_login_and_cadre"
            android:textSize="@dimen/txt_15_sp"

            android:textStyle="bold"
            android:visibility="invisible"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/back_message1"
            android:visibility="gone"
            >
            <ImageButton
                android:id="@+id/btn_play_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/dimens_32px"
                android:src="@drawable/play"
                android:background="@drawable/btn_selector_delet"
                tools:ignore="ContentDescription"
                />
            <SeekBar
                android:id="@+id/seek_record_1"
                android:layout_width="@dimen/dimens_200px"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/btn_play_1"
                app:layout_constraintBottom_toBottomOf="@id/btn_play_1"
                app:layout_constraintStart_toEndOf="@id/btn_play_1"
            />
            <TextView
                android:id="@+id/text_record_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/btn_play_1"
                app:layout_constraintBottom_toBottomOf="@id/btn_play_1"
                app:layout_constraintStart_toEndOf="@id/seek_record_1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="@dimen/dimens_32px"
                android:layout_marginEnd="@dimen/dimens_32px"

                android:paddingEnd="@dimen/dimens_18px"
                android:paddingRight="@dimen/dimens_18px"


                android:textColor="@color/color_text_login_and_cadre"
                android:textSize="@dimen/txt_15_sp"
                android:textStyle="bold"
         />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/next_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_msg1"
        app:layout_constraintBottom_toBottomOf="@id/view_msg1"
        app:layout_constraintStart_toEndOf="@id/view_msg1"
        android:src="@drawable/flech_right"
        android:background="@drawable/btn_selector_delet"
        tools:ignore="ContentDescription"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/previous_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_msg1"
        app:layout_constraintBottom_toBottomOf="@id/view_msg1"
        app:layout_constraintStart_toEndOf="@id/image_player1"
        android:layout_marginStart="@dimen/dimens_55px"
        android:src="@drawable/flech_left"
        android:background="@drawable/btn_selector_delet"
        tools:ignore="ContentDescription"

        android:visibility="invisible"

        android:layout_marginLeft="@dimen/dimens_55px" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toStartOf="@id/previous_message2"
        app:layout_constraintTop_toTopOf="@id/image_player2"
        android:layout_marginTop="@dimen/dimens_18px">

        <TextView
            android:id="@+id/txt_msg2"
            style="@style/scrollbar_shape_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_message2"
            android:gravity="start|center_vertical"


            android:maxWidth="@dimen/dimens_550px"
            android:maxHeight="@dimen/dimens_220px"
            android:paddingStart="@dimen/dimens_55px"
            android:paddingEnd="@dimen/dimens_55px"
            android:paddingTop="@dimen/dimens_32px"
            android:paddingBottom="@dimen/dimens_32px"
            android:textColor="@color/color_text_login_and_cadre"

            android:textSize="@dimen/txt_15_sp"
            android:textStyle="bold"
            android:visibility="invisible"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_record2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/back_message1"
            android:visibility="gone"
            >
            <ImageButton
                android:id="@+id/btn_play_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/dimens_32px"
                android:src="@drawable/play"
                android:background="@drawable/btn_selector_delet"
                tools:ignore="ContentDescription"
                />
            <SeekBar
                android:id="@+id/seek_record_2"
                android:layout_width="@dimen/dimens_200px"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/btn_play_2"
                app:layout_constraintBottom_toBottomOf="@id/btn_play_2"
                app:layout_constraintStart_toEndOf="@id/btn_play_2"
                />
            <TextView
                android:id="@+id/text_record_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/btn_play_2"
                app:layout_constraintBottom_toBottomOf="@id/btn_play_2"
                app:layout_constraintStart_toEndOf="@id/seek_record_2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="@dimen/dimens_32px"
                android:layout_marginEnd="@dimen/dimens_32px"
                android:paddingEnd="@dimen/demens_23px"
                android:paddingRight="@dimen/demens_23px"

                android:textColor="@color/color_text_login_and_cadre"
                android:textSize="@dimen/txt_15_sp"
                android:textStyle="bold"
               />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/clear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/view_msg1"
        app:layout_constraintTop_toBottomOf="@id/view_msg1"
        app:layout_constraintEnd_toEndOf="@id/view_msg1"
        app:layout_constraintStart_toEndOf="@id/view_msg1"
        android:src="@drawable/clear_all"
        android:background="@drawable/btn_selector_delet"
        tools:ignore="ContentDescription"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/clear_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector_delet"
        android:src="@drawable/clear_all"
        app:layout_constraintBottom_toTopOf="@id/view_msg2"
        app:layout_constraintTop_toTopOf="@id/view_msg2"
        app:layout_constraintStart_toStartOf="@id/view_msg2"
        app:layout_constraintEnd_toStartOf="@id/view_msg2"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/next_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_msg2"
        app:layout_constraintBottom_toBottomOf="@id/view_msg2"
        app:layout_constraintEnd_toStartOf="@id/view_msg2"
        android:src="@drawable/flech_left"
        android:background="@drawable/btn_selector_delet"
        tools:ignore="ContentDescription"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/previous_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_55px"
        android:layout_marginRight="@dimen/dimens_55px"
        android:background="@drawable/btn_selector_delet"
        android:src="@drawable/flech_right"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/view_msg2"
        app:layout_constraintEnd_toStartOf="@id/image_player2"
        app:layout_constraintTop_toTopOf="@id/view_msg2"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/tab_simulation"
        android:layout_width="@dimen/dimens_800ox"
        android:layout_height="@dimen/dimens_800ox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image_player1"
        android:layout_width="@dimen/dimens_180px"
        android:layout_height="@dimen/dimens_180px"
        android:layout_marginStart="@dimen/dimens_45px"
        android:layout_marginLeft="@dimen/dimens_45px"
        android:layout_marginBottom="@dimen/dimens_45px"
        android:src="@drawable/inconnu"



        android:visibility="invisible"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/tab_simulation"
        app:layout_constraintStart_toStartOf="parent"
        app:sriv_oval="true" />


    <Button
        android:id="@+id/btn_show_1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/image_player1"
        app:layout_constraintEnd_toEndOf="@id/image_player1"
        app:layout_constraintBottom_toBottomOf="@id/image_player1"
        app:layout_constraintTop_toTopOf="@id/image_player1"
        android:background="@drawable/btn_selector_delet"
        android:enabled="false"
        />
    <Button
        android:id="@+id/btn_show_2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/image_player2"
        app:layout_constraintEnd_toEndOf="@id/image_player2"
        app:layout_constraintBottom_toBottomOf="@id/image_player2"
        app:layout_constraintTop_toTopOf="@id/image_player2"
        android:background="@drawable/btn_selector_delet"
        android:enabled="false"
        />

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image_player2"
        android:layout_width="@dimen/dimens_180px"
        android:layout_height="@dimen/dimens_180px"
        android:layout_marginTop="@dimen/dimens_45px"
        android:layout_marginEnd="@dimen/dimens_45px"
        android:layout_marginRight="@dimen/dimens_45px"
        android:src="@drawable/inconnu"


        android:visibility="invisible"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_simulation"
        app:sriv_oval="true" />

    <!-- <TextView
        android:id="@+id/txt_match_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimens_130px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_player1"
        app:layout_constraintBottom_toBottomOf="@id/image_player1"
        app:layout_constraintStart_toStartOf="parent"

        android:text="0"
        android:textColor="@color/color_text_login_and_cadre"
        android:textSize="@dimen/dimens_70px"
        android:gravity="center"
        android:textStyle="bold"

        android:background="@drawable/back_select_price"




        android:drawableEnd="@drawable/coins"
        android:drawableRight="@drawable/coins"

        android:drawablePadding="@dimen/dimens_32px"
        android:visibility="gone"
        />
        -->

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/progressbar_player1"
        android:layout_width="@dimen/dimens_220px"
        android:layout_height="@dimen/dimens_220px"

        android:visibility="gone"
        app:gaugeEndValue="30000"
        app:gaugePointEndColor="@color/time30"
        app:gaugePointStartColor="@color/time30"



        app:gaugeStartAngle="270"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="#00000000"
        app:gaugeStrokeWidth="@dimen/dimens_11px"
        app:gaugeSweepAngle="360"
        app:layout_constraintBottom_toBottomOf="@id/image_player1"
        app:layout_constraintEnd_toEndOf="@id/image_player1"
        app:layout_constraintStart_toStartOf="@id/image_player1"
        app:layout_constraintTop_toTopOf="@id/image_player1" />

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/progressbar_player2"
        android:layout_width="@dimen/dimens_220px"
        android:layout_height="@dimen/dimens_220px"

        android:visibility="gone"
        app:gaugeEndValue="30000"
        app:gaugePointEndColor="@color/time30"
        app:gaugePointStartColor="@color/time30"

        app:gaugeStartAngle="270"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="#00000000"
        app:gaugeStrokeWidth="@dimen/dimens_11px"
        app:gaugeSweepAngle="360"

        app:layout_constraintBottom_toBottomOf="@id/image_player2"
        app:layout_constraintEnd_toEndOf="@id/image_player2"
        app:layout_constraintStart_toStartOf="@id/image_player2"
        app:layout_constraintTop_toTopOf="@id/image_player2" />



    <TextView
        android:id="@+id/chrono_1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/image_player1"
        app:layout_constraintEnd_toEndOf="@id/image_player1"
        app:layout_constraintBottom_toBottomOf="@id/image_player1"
        app:layout_constraintTop_toTopOf="@id/image_player1"
        android:background="@drawable/chrono_oval"

        android:text=""
        android:gravity="center"
        android:textColor="@color/color_text_login_and_cadre"
        android:textStyle="bold"
        android:textSize="@dimen/txt_25_sp"

        android:visibility="gone"
        />
    <TextView
        android:id="@+id/chrono_2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="@id/image_player2"
        app:layout_constraintEnd_toEndOf="@id/image_player2"
        app:layout_constraintBottom_toBottomOf="@id/image_player2"
        app:layout_constraintTop_toTopOf="@id/image_player2"
        android:background="@drawable/chrono_oval"

        android:text=""
        android:gravity="center"
        android:textColor="@color/color_text_login_and_cadre"
        android:textStyle="bold"
        android:textSize="@dimen/txt_25_sp"

        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>