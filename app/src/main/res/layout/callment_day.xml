<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:scaleX="0.9"
    android:scaleY="0.9"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/data_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimens_45dp"
        android:visibility="gone"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_550px"
            app:layout_constraintTop_toBottomOf="@id/image_player1"
            android:background="@drawable/podium"
            />


    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image_player1"
        android:layout_width="@dimen/dimen_330px"
        android:layout_height="@dimen/dimen_330px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimens_45dp"
        android:scaleType="centerCrop"
        app:sriv_oval="true" />
    <TextView
        android:id="@+id/txt_collect_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/image_player1"

        app:layout_constraintBottom_toTopOf="@id/image_player1"
        app:layout_constraintStart_toStartOf="@id/image_player1"
        android:layout_marginBottom="@dimen/dimens_32px"
        android:paddingTop="@dimen/dimens_5px"
        android:paddingBottom="@dimen/dimens_5px"
        android:paddingStart="@dimen/dimens_11px"
        android:paddingEnd="@dimen/dimens_11px"
        android:textColor="@color/color_text_login_and_cadre"
        android:textSize="@dimen/dimens_17_sp"
        android:gravity="center"

        android:textStyle="bold"

        android:background="@drawable/back_select_price"
        app:drawableEndCompat="@drawable/coins"
        android:drawablePadding="@dimen/dimens_18px"
        />

    <TextView
        android:id="@+id/c1"
        android:layout_width="@dimen/dimens_45dp"
        android:layout_height="@dimen/dimens_45dp"
        android:gravity="center"
        android:textColor="#272727"
        android:textSize="@dimen/txt_13_sp"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="@id/image_player1"
        app:layout_constraintStart_toStartOf="@id/image_player1"
        android:background="@drawable/o_first_place"
        />


    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image_player2"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="@dimen/dimen_90dp"
        app:layout_constraintStart_toEndOf="@id/image_player1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="125dp"
        android:scaleType="centerCrop"
        app:sriv_oval="true" />
    <TextView
        android:id="@+id/txt_collect_score_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/image_player2"

        app:layout_constraintBottom_toTopOf="@id/image_player2"
        app:layout_constraintStart_toStartOf="@id/image_player2"
        android:layout_marginBottom="@dimen/dimens_32px"
        android:paddingTop="@dimen/dimens_5px"
        android:paddingBottom="@dimen/dimens_5px"
        android:paddingStart="@dimen/dimens_11px"
        android:paddingEnd="@dimen/dimens_11px"
        android:textColor="@color/color_text_login_and_cadre"
        android:textSize="@dimen/dimens_17_sp"
        android:gravity="center"

        android:textStyle="bold"

        android:background="@drawable/back_select_price"
        app:drawableEndCompat="@drawable/coins"
        android:drawablePadding="@dimen/dimens_18px"
        />

    <TextView

        android:id="@+id/c2"
        android:layout_width="@dimen/dimens_45dp"
        android:layout_height="@dimen/dimens_45dp"
        android:gravity="center"
        android:textColor="#272727"
        android:textSize="@dimen/txt_13_sp"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="@id/image_player2"
        app:layout_constraintStart_toStartOf="@id/image_player2"
        android:background="@drawable/o_thrid_place"

        />

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image_player3"
        android:layout_width="@dimen/dimens_300px"
        android:layout_height="@dimen/dimens_300px"
        app:layout_constraintEnd_toStartOf="@id/image_player1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimens_300px"
        android:scaleType="centerCrop"
        app:sriv_oval="true" />
    <TextView
        android:id="@+id/txt_collect_score_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/image_player3"
        app:layout_constraintBottom_toTopOf="@id/image_player3"

        app:layout_constraintStart_toStartOf="@id/image_player3"
        android:layout_marginBottom="@dimen/dimens_32px"
        android:paddingTop="@dimen/dimens_5px"
        android:paddingBottom="@dimen/dimens_5px"
        android:paddingStart="@dimen/dimens_11px"
        android:paddingEnd="@dimen/dimens_11px"
        android:textColor="@color/color_text_login_and_cadre"
        android:textSize="@dimen/dimens_17_sp"
        android:gravity="center"

        android:textStyle="bold"

        android:background="@drawable/back_select_price"
        app:drawableEndCompat="@drawable/coins"
        android:drawablePadding="@dimen/dimens_18px"
        />

    <TextView

        android:id="@+id/c3"
        android:layout_width="@dimen/dimens_45dp"
        android:layout_height="@dimen/dimens_45dp"
        android:gravity="center"
        android:textColor="#272727"
        android:textSize="@dimen/txt_13_sp"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="@id/image_player3"
        app:layout_constraintStart_toStartOf="@id/image_player3"
        android:background="@drawable/o_second_place"

        />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimens_45dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/img"
                android:layout_width="@dimen/dimen_330px"
                android:layout_height="@dimen/dimen_330px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shimmer_circle"
                android:layout_marginTop="@dimen/dimens_45dp"

             />
            <View
                android:layout_width="@dimen/dimens_220px"
                android:layout_height="@dimen/dimen_100_px"
                app:layout_constraintEnd_toEndOf="@id/img"

                app:layout_constraintBottom_toTopOf="@id/img"
                android:layout_marginBottom="@dimen/dimens_32px"
                app:layout_constraintStart_toStartOf="@id/img"
                android:background="@drawable/shimmer_carre"
                />

            <View
                android:id="@+id/img2"
                android:layout_width="@dimen/dimen_330px"
                android:layout_height="@dimen/dimen_330px"
                app:layout_constraintStart_toEndOf="@id/img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shimmer_circle"
                android:layout_marginTop="@dimen/dimens_300px"

                />
            <View
                android:layout_width="@dimen/dimens_220px"
                android:layout_height="@dimen/dimen_100_px"
                app:layout_constraintEnd_toEndOf="@id/img2"

                app:layout_constraintBottom_toTopOf="@id/img2"
                android:layout_marginBottom="@dimen/dimens_32px"
                app:layout_constraintStart_toStartOf="@id/img2"
                android:background="@drawable/shimmer_carre"
                />


            <View
                android:id="@+id/img3"
                android:layout_width="@dimen/dimen_330px"
                android:layout_height="@dimen/dimen_330px"
                app:layout_constraintEnd_toStartOf="@id/img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/shimmer_circle"
                android:layout_marginTop="@dimen/dimen_330px"

                />
            <View
                android:layout_width="@dimen/dimens_220px"
                android:layout_height="@dimen/dimen_100_px"
                app:layout_constraintEnd_toEndOf="@id/img3"
                app:layout_constraintBottom_toTopOf="@id/img3"
                android:layout_marginBottom="@dimen/dimens_32px"

                app:layout_constraintStart_toStartOf="@id/img3"
                android:background="@drawable/shimmer_carre"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_550px"
                app:layout_constraintTop_toBottomOf="@id/img"
                android:background="@drawable/podium"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dimens_750px"
        android:gravity="center"
        android:textColor="#E6E1E1"
        android:textSize="@dimen/txt_20_sp"
        android:textStyle="bold"

        android:text="@string/no_data_yet"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>