<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimens_690px"
    android:layout_margin="@dimen/dimens_18px"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/j"
        android:layout_width="@dimen/dimens_180px"
        android:layout_height="@dimen/dimens_180px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimens_85px"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/smartphone"

        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        app:layout_constraintStart_toStartOf="@id/j"
        app:layout_constraintTop_toBottomOf="@id/j"
        app:layout_constraintEnd_toEndOf="@id/j"



        android:textSize="@dimen/txt_15_sp"
        android:textColor="@color/color_text_login_and_cadre"
        android:textStyle="bold"
        android:gravity="start"

        android:padding="@dimen/demens_23px"

        />
    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        app:layout_constraintStart_toStartOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintEnd_toEndOf="@id/txt_name"

        android:layout_marginBottom="@dimen/dimens_45px"



        android:textSize="@dimen/txt_7_5_sp"
        android:textColor="@color/color_text_petit"
        android:textStyle="bold"
        android:gravity="start"

        android:paddingStart="@dimen/demens_23px"
        android:paddingLeft="@dimen/demens_23px"

        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_pear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_search_bluetooth"
        android:gravity="center"
        android:text="@string/pair_the_device"
        android:textAllCaps="false"
        android:textSize="@dimen/txt_15_sp"
        android:textStyle="bold"
        android:textColor="@color/color_text_login_and_cadre"


        app:layout_constraintEnd_toEndOf="@id/btn_play"
        app:layout_constraintTop_toTopOf="@id/btn_play"
        app:layout_constraintBottom_toBottomOf="@id/btn_play"
        app:layout_constraintStart_toStartOf="@id/btn_play"

        android:visibility="invisible"

        />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_search_bluetooth"
        android:gravity="center"
        android:text="@string/play"
        android:textAllCaps="false"
        android:textSize="@dimen/txt_15_sp"
        android:textStyle="bold"
        android:textColor="@color/color_text_login_and_cadre"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginEnd="@dimen/dimens_55px"
        android:layout_marginStart="@dimen/dimens_55px"


        android:drawableEnd="@drawable/ic_home_plean_"
        android:drawableRight="@drawable/ic_home_plean_"
        android:padding="@dimen/dimens_32px"
        android:drawablePadding="@dimen/dimens_45px"

        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>