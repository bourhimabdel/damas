<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".trending"
    android:background="@color/top_"
    >


    <com.damasingo.CLASS_UTIL.CustomViewPage
        android:id="@+id/view_pager_trending"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/uu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimens_18px"
        android:layout_marginEnd="@dimen/dimens_18px"
        android:layout_marginTop="@dimen/dimens_130px">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_45dp"
            android:background="@drawable/tab_inde_home"
            />


        <View
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_45dp"
            android:background="@drawable/gradient_bg_local"
            />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_trending"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_45dp"
            app:layout_constraintTop_toBottomOf="@id/txt_play_online"


            app:tabIndicatorHeight="0dp"
            android:background="@drawable/tab_bg"
            app:tabGravity="fill"
            app:tabMode="fixed"

            app:tabIndicatorColor="@null"
            app:tabRippleColor="@null"

            app:tabTextColor="@color/color_text_petit"
            app:tabSelectedTextColor="@color/color_text_login_and_cadre"

            />

    </FrameLayout>

    <TextView
        android:id="@+id/txt_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/txt_20_sp"
        android:textStyle="bold"
        android:textColor="@color/color_text_petit"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uu"
        app:layout_constraintStart_toStartOf="parent"

        android:background="@drawable/back_count_tending"
        android:paddingStart="@dimen/dimens_32px"
        android:paddingEnd="@dimen/dimens_32px"
        />

</androidx.constraintlayout.widget.ConstraintLayout>